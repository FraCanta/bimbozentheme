<div class="w-[90%] mx-auto py-20">
  {% if search.performed %}
    <h1>Qui i tuoi risultati</h1>
    {% for result in search.results %}
      {% if result.object_type == 'page' %}
        <a href="{{ result.url }}">{{ result.title }}</a>
      {% elsif result.object_type == 'article' %}
        <a href="{{ result.url }}">{{ result.title }}</a>
      {% else %}
        <a href="{{ result.url }}">{{ result.title }}</a>
      {% endif %}
    {% endfor %}
  {% else %}
    <h1>Riprova e cerca di nuovo!</h1>
  {% endif %}
</div>
