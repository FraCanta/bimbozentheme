<div>
  <a href="{{ product.url }}">
    <img
      src="{% if product.featured_image %}{{ product.featured_image | image_url }}{% else %}{{ 'placeholder.jpg' | asset_url }}{% endif %}"
      width="auto"
      height="auto"
      class="w-full h-[300px] object-cover"
    >
    <div class="flex flex-col items-center w-full py-4 text-center">
      <h3 class="font-bold text-[#3A3F4C]  text-lg">{{ product.title }}</h3>
      <div class="flex gap-2">
        <p class="text-lg !font-medium text-[#3A3F4C]/60">{{ product.price | money }}</p>
      </div>
    </div>
  </a>
</div>
