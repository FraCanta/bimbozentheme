<footer class="py-20 text-white bg-main">
  <div class="w-[90%] grid grid-cols-1 gap-6 mx-auto md:grid-cols-4">
    <!-- Colonna Logo -->
    <div class="logo">
      <img src="{{ 'logo.svg' | asset_url }}" alt="Logo" class="mb-4" width="auto" height="auto">
      <p>Dati dell'azienda con piva etc e indirizzo</p>
    </div>

    <!-- Colonna 1: Pagine -->
    <div class="colonna-1">
      <h3 class="mb-2 font-medium">{{ section.settings.title_1 }}</h3>
      <ul>
        {% for page in pages %}
          <li>
            <a href="{{ page.url }}" class="text-gray-400 hover:text-white">{{ page.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <!-- Colonna 2: FAQ e altre informazioni -->
    <div class="colonna-2">
      <h3 class="mb-2 font-medium">{{ section.settings.title_2 }}</h3>
      <ul>
        <li>
          <a href="/faq" class="text-gray-400 hover:text-white">FAQ</a>
        </li>
        <li>
          <a href="/pagamento-sicuro" class="text-gray-400 hover:text-white">Pagamento sicuro</a>
        </li>
        <li>
          <a href="/modalita-di-consegna" class="text-gray-400 hover:text-white">Modalità di consegna</a>
        </li>
        <li>
          <a href="/carta-regalo" class="text-gray-400 hover:text-white">Carta regalo</a>
        </li>
        <li>
          <a href="/guida-alle-taglie" class="text-gray-400 hover:text-white">Guida alle taglie</a>
        </li>
      </ul>
    </div>

    <!-- Colonna 3: Contatti e Social -->
    <div class="colonna-3">
      <h3 class="mb-2 font-medium">{{ section.settings.title_3 }}</h3>
      <h3 class="mb-2 font-medium">Contatti</h3>
      <p class="text-gray-400">Dalle 9:00 alle 19:00 dal lunedì al venerdì</p>

      <!-- Icone Social -->
      <div class="flex mt-4 space-x-4">
        <a href="https://facebook.com" class="text-gray-400 hover:text-white">Facebook</a>
        <a href="https://instagram.com" class="text-gray-400 hover:text-white">Instagram</a>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "title_1",
      "label": "Titolo Colonna 1",
      "default": "Pagine"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Titolo Colonna 2",
      "default": "Informazioni"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Titolo Colonna 3",
      "default": "Colonna 3"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Voce di elenco",
      "settings": [
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Etichetta"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Footer"
    }
  ]
}
{% endschema %}
